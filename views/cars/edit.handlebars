<h2>Edit Car:</h2>
<form action="/cars/edit" method="POST">
  Make
  <input type="text" name="make" value="{{car.make}}"/>
  <br />
  Model
  <input type="text" name="model" value="{{car.model}}"/>
  <br />
  Year
  <input type="number" name="year" value="{{car.year}}"/>
  <br />
  Price per day
  <input type="number" name="pricePerDay" value="{{car.pricePerDay}}"/>
  <br />
  Power
  <input type="number" name="power" value="{{car.power}}"/>
  <br />
  Image
  <input type="url" name="image" value="{{car.image}}"/>
  <br /> 
  <input type="submit" value="Edit" />
</form>